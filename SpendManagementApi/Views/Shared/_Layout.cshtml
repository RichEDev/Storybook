<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        @Scripts.Render("~/bundles/modernizr")    
        @Styles.Render("~/Content/themes/base/css")
        @Styles.Render("~/Content/common")
        @RenderSection("CSS", required:false)
    </head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <a class="logo">Spend Management API</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", new { Area = "HelpPage", Controller = "Help" }, new { title = "Home" })</li>
                    <li>@Html.ActionLink("Overview", "Overview", new { Area = "HelpPage", Controller = "Help" }, new { title = "Overview" })</li>
                    <li>@Html.ActionLink("Getting Started", "GettingStarted", new { Area = "HelpPage", Controller = "Help" }, new { title = "Getting Started" })</li>
                    <li>@Html.ActionLink("API Reference", "Reference", new { Area = "HelpPage", Controller = "Help" }, new { title = "Api Reference" })</li>
                    <li>@Html.ActionLink("API Type Dictionary", "TypeInformation", new { Area = "HelpPage", Controller = "Help" }, new { title = "Api Type Dictionary" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content clearfix">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year | Selenity Ltd.</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/common")
    @RenderSection("Scripts", required: false)
</body>
</html>
